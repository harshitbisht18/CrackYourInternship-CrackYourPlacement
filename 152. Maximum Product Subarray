class Solution
{
    public:
        int maxProduct(vector<int> &nums)
        {
            int n = nums.size();
            double pre = 1, suf = 1;
            double ans = INT_MIN;
            for (int i = 0; i < n; i++)
            {

                pre *= nums[i];
                suf *= nums[n - 1 - i];
                ans = max(ans, max(suf, pre));
                if (pre == 0)
                    pre = 1;
                if (suf == 0)
                    suf = 1;
            }
            return ans;
        }
};
